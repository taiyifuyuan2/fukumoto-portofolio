<div class="max-w-4xl mx-auto">
  <div class="bg-white rounded-lg shadow-lg p-8">
    <div class="flex justify-between items-start mb-8">
      <div>
        <h1 class="text-3xl font-bold text-gray-900"><%= @skill.name %></h1>
        <p class="text-gray-600 mt-2"><%= @skill.description %></p>
      </div>
      <div class="flex space-x-3">
        <%= link_to '編集', edit_admin_skill_path(@skill), class: 'btn-primary' %>
        <%= link_to '戻る', admin_skills_path, class: 'btn-secondary' %>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <div class="space-y-6">
        <div>
          <h3 class="text-lg font-semibold text-gray-900 mb-3">基本情報</h3>
          <div class="bg-gray-50 rounded-lg p-4 space-y-3">
            <div class="flex justify-between">
              <span class="text-gray-600">アイコン:</span>
              <span class="text-2xl"><%= @skill.icon %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">カテゴリ:</span>
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                <%= @skill.category %>
              </span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">熟練度:</span>
              <div class="text-right">
                <div class="text-yellow-500 text-lg">
                  <%= @skill.proficiency_stars %>
                </div>
                <div class="text-sm text-gray-500">レベル <%= @skill.proficiency %></div>
              </div>
            </div>
          </div>
        </div>

        <div>
          <h3 class="text-lg font-semibold text-gray-900 mb-3">熟練度の詳細</h3>
          <div class="bg-gray-50 rounded-lg p-4">
            <div class="space-y-2">
              <% 5.times do |i| %>
                <div class="flex items-center">
                  <span class="text-sm text-gray-600 w-16">
                    <%= case i + 1
                        when 1 then '初心者'
                        when 2 then '初級'
                        when 3 then '中級'
                        when 4 then '上級'
                        when 5 then 'エキスパート'
                        end %>
                  </span>
                  <div class="flex-1 mx-3">
                    <div class="h-2 bg-gray-200 rounded-full">
                      <div class="h-2 bg-yellow-400 rounded-full" style="width: <%= (i + 1) <= @skill.proficiency ? '100%' : '0%' %>"></div>
                    </div>
                  </div>
                  <span class="text-sm text-gray-500 w-8 text-right">
                    <%= i + 1 %>
                  </span>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <div>
        <h3 class="text-lg font-semibold text-gray-900 mb-3">アクション</h3>
        <div class="space-y-3">
          <%= link_to '編集する', edit_admin_skill_path(@skill), class: 'w-full btn-primary text-center block' %>
          <%= link_to '削除する', admin_skill_path(@skill), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'w-full bg-red-500 hover:bg-red-600 text-white font-bold py-3 px-4 rounded text-center block' %>
        </div>

        <div class="mt-8">
          <h3 class="text-lg font-semibold text-gray-900 mb-3">統計情報</h3>
          <div class="bg-gray-50 rounded-lg p-4 space-y-3">
            <div class="flex justify-between">
              <span class="text-gray-600">作成日:</span>
              <span class="text-gray-900"><%= @skill.created_at.strftime('%Y年%m月%d日') %></span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">更新日:</span>
              <span class="text-gray-900"><%= @skill.updated_at.strftime('%Y年%m月%d日') %></span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
